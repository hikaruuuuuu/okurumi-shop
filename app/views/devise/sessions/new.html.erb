<div class="devise-box">
  <h2>ログイン</h2>

  <div class="devise-form">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <% if flash.present? %>
      <div class='login-flash-message'>
        ※<%= flash[:notice] %><%= flash[:alert] %>
      </div>
      <% end %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", required: true %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", required: true %>
      </div>

      <div class="actions">
        <%= link_to "パスワード忘れた方はこちら", new_password_path(resource_name), class: "forgot-pass" %>
        <%= f.submit "ログイン", class: "submit" %>
      </div>
    <% end %>
  </div>
</div>